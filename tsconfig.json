{
   "compilerOptions": {
      "target": "es5",
      "module": "commonjs",
      "lib": [
         "es6",
         "es7",
         "dom"
      ],
      "moduleResolution": "node",
      "declaration": true,
      "sourceMap": true,
      "outDir": "./dist",
      "removeComments": true,
      "strict": true,
      "noImplicitAny": false,
      "strictPropertyInitialization": false,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true
   },
   "exclude": [
      "node_modules"
   ],
   "include": [
      "./src/**/*.tsx",
      "./src/**/*.ts"
   ]
}